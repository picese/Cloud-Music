/* pages/list/list.wxss */

.brand {
  width: 100%;
  height: 400rpx;
  display: block;
  position: relative;
}

.w100 {
  width: 204rpx;
  margin-left: -96rpx;
}

.w200 {
  width: 400rpx;
  margin-left: -164rpx;
}

.title {
  position: absolute;
  top: 4%;
  left: 50%;
  font-size: 14px;
  z-index: 100;
}

.random {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 260rpx;
  height: 60rpx;
  border-radius: 45rpx;
  border: 2rpx solid #ffcd32;
  position: absolute;
  left: 50%;
  top: 25%;
  z-index: 100;
  margin-left: -130rpx;
}

.random image {
  width: 34rpx;
  height: 34rpx;
  display: block;
  padding: 0 6rpx;
}

.random .order {
  font-size: 13px;
}

.random .sum {
  font-size: 11px;
  color: #ccc;
}

/* 歌单 */

.list {
  margin: 8rpx 0;
  padding-bottom: 136rpx;
}

.item {
  display: flex;
  flex-direction: column;
  border-bottom: 2rpx solid #ccc;
  padding: 16rpx 0;
  margin: 0 30rpx;
}

.item .name {
  font-size: 15px;
  padding-bottom: 10rpx;
  width: 96%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.item .singer {
  display: flex;
  flex-direction: row;
  width: 96%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.item .singer text {
  font-size: 11px;
  color: #555;
  padding-right: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
