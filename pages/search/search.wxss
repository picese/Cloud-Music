/* pages/search/search.wxss */

.search {
  width: 97%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.search input {
  width: 100%;
  height: 68rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  margin-left: 24rpx;
  font-size: 13px;
}

/* 热门搜索 */

h4 {
  font-size: 14px;
  margin-left: 24rpx;
  color: #444;
}

.hotSearch {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.hotSearch text {
  height: 50rpx;
  font-size: 12px;
  text-align: center;
  line-height: 50rpx;
  padding: 0 16rpx;
  margin: 0 12rpx 20rpx 0;
  border: 2rpx solid #ccc;
  border-radius: 25rpx;
}

/* 搜索结果 */

.result {
  padding-bottom: 140rpx;
  overflow-x:hidden;
}

.song-list {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #ccc;
  padding: 0 20rpx;
}

.song-image {
  margin: 30rpx 20rpx 0 0;
}

.result .song-msg {
  display: flex;
  flex-direction: row;
  width: 66%;
  line-height: 3.6;
  text-align: left;
}

.result .song-name {
  white-space: nowrap;
  font-size: 14px;
}

.result .singer {
  width: 52%;
  display: flex;
  flex-direction: row;
  line-height: 4.8;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.result .name {
  font-size: 12px;
  display: inline-block;
  padding-right: 4px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.result .song-btn {
  width: 60rpx;
  height: 60rpx;
  margin: 40rpx 0 0 80rpx;
}

/* 搜索记录 */

.record .titel, .record .list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 15px;
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #ccc;
}

.record .list {
  color: #000;
  font-size: 14px;
}

.record .list text:first-child {
  width: 70%;
}
